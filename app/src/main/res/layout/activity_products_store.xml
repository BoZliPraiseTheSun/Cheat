<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/scroll_view">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            tools:context=".ProductsStoreActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/add_product">

            <TextView
                    style="@style/PrimaryText"
                    android:textSize="26dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/product_name"/>

            <SeekBar
                    android:layout_width="0dp"
                    app:layout_constraintHorizontal_weight="9"
                    android:layout_height="20dp"
                    android:max="150"
                    android:progress="0"
                    app:layout_constraintTop_toTopOf="@id/view_cal_in_seek_bar"
                    app:layout_constraintStart_toEndOf="@id/view_cal_in_seek_bar"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/view_cal_in_seek_bar"
                    android:id="@+id/put_cal"/>

            <TextView
                    style="@style/TextListener"
                    app:layout_constraintHorizontal_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    app:layout_constraintTop_toBottomOf="@id/product_name"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/put_cal"
                    android:id="@+id/view_cal_in_seek_bar"/>

            <Button
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:text="Del"
                    android:layout_marginEnd="12dp"
                    app:layout_constraintTop_toTopOf="@id/add_product_btn"
                    app:layout_constraintBottom_toBottomOf="@id/add_product_btn"
                    app:layout_constraintEnd_toStartOf="@id/add_product_btn"
                    android:id="@+id/deleted_product"/>

            <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_eat"
                    android:background="@drawable/custom_add_btn"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintTop_toBottomOf="@id/put_cal"
                    app:layout_constraintEnd_toEndOf="@id/put_cal"
                    android:id="@+id/add_product_btn"/>

            <TextView
                    style="@style/TextListener"
                    android:text="Ккал: "
                    app:layout_constraintTop_toBottomOf="@id/put_cal"
                    app:layout_constraintStart_toStartOf="@id/view_cal_in_seek_bar"
                    android:id="@+id/text_view"/>

            <TextView
                    style="@style/TextListener"
                    app:layout_constraintStart_toEndOf="@id/text_view"
                    app:layout_constraintBaseline_toBaselineOf="@id/text_view"
                    android:id="@+id/gram_to_cal_text"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/add_product"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/relative_layout">

            <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/product_list_recycler"/>

        </RelativeLayout>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADD"
                app:layout_constraintTop_toBottomOf="@id/relative_layout"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/test_add_product"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>