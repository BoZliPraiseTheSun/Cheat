<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:paddingTop="4dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:background="@color/colorDefault"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/image_product_recycler"/>

    <TextView
            style="@style/CalText"
            app:layout_constraintTop_toBottomOf="@id/image_product_recycler"
            app:layout_constraintStart_toStartOf="@id/image_product_recycler"
            app:layout_constraintEnd_toEndOf="@id/image_product_recycler"
            android:id="@+id/cal_product_text_recycler"/>
</androidx.constraintlayout.widget.ConstraintLayout>